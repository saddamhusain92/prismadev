generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Postdev {
  id        String      @id @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime 
  title     String   
  content   String?
  published Boolean  @default(false)
}

model User {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String 
  name     String
}
